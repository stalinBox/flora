<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/laguna10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="174dp"
        tools:layout_editor_absoluteY="287dp">

        <Button
            android:id="@+id/button7"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="150px"
            android:layout_marginLeft="150px"
            android:layout_marginEnd="150px"
            android:layout_marginRight="150px"
            android:layout_marginBottom="150px"
            android:onClick="irActivityListarEspecies"
            android:background="@drawable/boton_redondo"
            android:drawableLeft="?android:attr/actionModeFindDrawable"
            android:text="LISTAR ESPECIES"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button8"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="150px"
            android:layout_marginLeft="150px"
            android:layout_marginEnd="150px"
            android:layout_marginRight="150px"
            android:onClick="irActivityListarClasificacion"
            android:background="@drawable/boton_redondo"
            android:drawableLeft="?android:attr/actionModeFindDrawable"
            android:text="LISTAR CLASIFICACION ESPECIES"
            android:textSize="18sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>