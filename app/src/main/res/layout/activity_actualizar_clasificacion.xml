<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10sp"
    android:background="@drawable/fondo1"
    tools:context=".Clasificacion">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="40sp"
        android:layout_marginBottom="5sp"
        android:gravity="center"
        android:padding="15sp"
        android:text="ACTUALIZAR CLASIFICACIÒN"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="DIGITE PRIMERO EL CÒDIGO DE LA CLASIFICACIÒN REGISTRADA Y LUEGO EL O LOS CAMPOS A MODIFICAR"
        android:textSize="16sp"
        android:textStyle="bold" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="0sp">

        <EditText
            android:id="@+id/edtCodigo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="75px"
            android:ems="10"
            android:hint="Còdigo:"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edtReino"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Reino:"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edtDivision"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Divisiòn:"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edtClase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Clase:"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edtOrden"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Orden:"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edtFamilia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Familia:"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edtGenero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Gènero:"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edtEspecie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Especie:"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btnActualizarC"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_marginStart="50sp"
            android:layout_marginLeft="50sp"
            android:layout_marginTop="25sp"
            android:layout_marginEnd="50sp"
            android:layout_marginRight="50sp"
            android:background="@drawable/boton_redondo"
            android:drawableLeft="@android:drawable/ic_popup_sync"
            android:text="ACTUALIZAR CLASIFICACIÒN" />


    </LinearLayout>
    </ScrollView>

</LinearLayout>